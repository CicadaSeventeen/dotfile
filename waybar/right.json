{
	"width": 45,
	"position": "right",
	"modules-left": ["custom/spacer-top-left", "group/clock-stack", "custom/spacer-top-right"],
	"modules-center": [ "custom/spacer-tray-left", "bluetooth", "network", "tray","group/sound", "custom/spacer-tray-right"],
	"modules-right": ["custom/spacer-bottom-left", "group/battery-stack", "custom/spacer-bottom-right"],
	"group/clock-stack": {
		"orientation": "vertical",
		"modules": ["custom/spacer-clock-left", "clock#time", "clock#date", "clock#year","clock#week"]
	},
	"group/sound": {
		"orientation": "vertical",
		"modules": ["pulseaudio", "pulseaudio/slider"]
	},
	"group/battery-stack": {
		"orientation": "vertical",
		"modules": ["power-profiles-daemon", "battery#icon", "battery#percent"]
	},
	"custom/spacer-top-left": {
		"format": " ",
		"tooltip": false
	},
	"custom/spacer-top-right": {
		"format": " ",
		"tooltip": false
	},
	"custom/spacer-tray-left": {
		"format": " ",
		"tooltip": false
	},
	"custom/spacer-tray-right": {
		"format": " ",
		"tooltip": false
	},
	"custom/spacer-bottom-left": {
		"format": " ",
		"tooltip": false
	},
	"custom/spacer-bottom-right": {
		"format": " ",
		"tooltip": false
	},
	"clock#time": {
		"format": "{:%H:%M}",
		"tooltip-format": "<tt><small>{calendar}</small></tt>",
		"calendar": {
			"mode": "month",
			"on-scroll": 1,
			"format": {
				"months": "<span color='#ffead3'><b>{}</b></span>",
				"today": "<span color='#ff6699'><b><u>{}</u></b></span>"
			}
		}
	},
	"clock#date": {
		"format": "{:%m.%d}",
		"tooltip-format": "<tt><small>{calendar}</small></tt>",
		"calendar": {
			"mode": "month",
			"on-scroll": 1,
			"format": {
				"months": "<span color='#ffead3'><b>{}</b></span>",
				"today": "<span color='#ff6699'><b><u>{}</u></b></span>"
			}
		}
	},
	"clock#year": {
		"format": "{:%Y}",
		"tooltip-format": "<tt><small>{calendar}</small></tt>",
		"calendar": {
			"mode": "month",
			"on-scroll": 1,
			"format": {
				"months": "<span color='#ffead3'><b>{}</b></span>",
				"today": "<span color='#ff6699'><b><u>{}</u></b></span>"
			}
		}
	},
	"clock#week": {
		"format": "周{:%w}",
		"tooltip-format": "<tt><small>{calendar}</small></tt>",
		"calendar": {
			"mode": "month",
			"on-scroll": 1,
			"format": {
				"months": "<span color='#ffead3'><b>{}</b></span>",
				"today": "<span color='#ff6699'><b><u>{}</u></b></span>"
			}
		}
	},
	"tray": {
		"icon-size": 20,
		"spacing": 5,
		"show-passive-items": false,
	},
	"battery#icon": {
		"interval": 60,
		"states": {
			"warning": 30,
			"critical": 15
		},
		"format": "{icon}",
		"format-charging": "󰚥",
		"format-full": "󰚥",
		"tooltip-format": "{capacity} %",
		"tooltip": true,
		"format-icons": ["", "", "", "", ""],
		"max-length": 25
	},
	"battery#percent": {
		"interval": 60,
		"states": {
			"warning": 30,
			"critical": 15
		},
		"format": "{capacity}%",
		"tooltip-format": "{capacity} %",
		"tooltip": true,
		"max-length": 25
	},
	"power-profiles-daemon": {
		"format": "{icon}",
		"tooltip-format": "Power profile: {profile}\nDriver: {driver}",
		"tooltip": true,
		"format-icons": {
			"default": "󰖌",
			"performance": "󰈸",
			"balanced": "󱐋",
			"power-saver": "󰌪"
		}
	},
	"pulseaudio": {
		"format": " {icon}",
		"format-bluetooth": " {icon}",
		"format-muted": "",
		"format-icons": {
			"alsa_output.pci-0000_00_1f.3.analog-stereo": "",
			"alsa_output.pci-0000_00_1f.3.analog-stereo-muted": "",
			"headphone": "",
			"hands-free": "",
			"headset": "",
			"phone": "",
			"phone-muted": "",
			"portable": "",
			"car": "",
			"default": ["", ""]
		},
		"scroll-step": 1,
		"on-click": "pavucontrol",
		"ignored-sinks": ["Easy Effects Sink"]
	},
	"pulseaudio/slider": {
		"min": 0,
		"max": 100,
		"orientation": "horizontal"
	},
	"network": {
		"format": "{ifname}",
		"format-wifi": "",
		"format-ethernet": "󰊗",
		"format-disconnected": "󰲜", //An empty format will hide the module.
		"tooltip-format": "{ifname} via {gwaddr} 󰊗",
		"tooltip-format-wifi": "{essid} ({signalStrength}%) ",
		"tooltip-format-ethernet": "{ifname} ",
		"tooltip-format-disconnected": "Disconnected",
		"max-length": 50,
		"on-click":"nmgui",
	},
	"bluetooth": {
		"format": "",
		"format-disabled": "󰂲",
		"format-connected": "",
		"tooltip-format": "{controller_alias}\t{controller_address}",
		"tooltip-format-connected": "{controller_alias}\t{controller_address}\n\n{device_enumerate}",
		"tooltip-format-enumerate-connected": "{device_alias}\t{device_address}"
	}
}

